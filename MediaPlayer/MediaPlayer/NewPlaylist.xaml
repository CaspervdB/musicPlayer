<Window x:Class="MediaPlayer.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaPlayer"
        mc:Ignorable="d"
        Title="NewPlaylist" Height="218.174" Width="396.415">
    <Grid>

        <Button Content="Add new playlist" HorizontalAlignment="Left" VerticalAlignment="Top" Width="363" Margin="10,109,0,0" Height="45" Command="{Binding NewPlaylistCommand}"/>
        <TextBox Name="NewPlaylistTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding PlaylistName}" VerticalAlignment="Top" Width="363" Margin="10,71,0,0"/>
        <Label Content="Playlist name:" HorizontalAlignment="Left" Margin="26,40,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
