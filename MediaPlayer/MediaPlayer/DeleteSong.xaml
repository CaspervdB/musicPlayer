<Window x:Class="MediaPlayer.DeleteSong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaPlayer"
        mc:Ignorable="d"
        Title="DeleteSong" Height="450" Width="800">
    <Window.DataContext>
        <local:DeleteSongViewModel/>
    </Window.DataContext>
    <Grid>
        <Label Content="Selecteer een playlist:"></Label>
        <ComboBox DisplayMemberPath="PlaylistName" Name="ComboBoxPlaylists" ItemsSource="{Binding Playlists}" SelectedItem="{Binding SelectedPlaylist}" HorizontalAlignment="Left" Margin="193,73,0,0" VerticalAlignment="Top" Width="211"/>
        <ComboBox DisplayMemberPath="SongTitle" Name="ComboBoxSongs" ItemsSource="{Binding Songlist}" SelectedItem="{Binding SelectedSong}" Margin="193,131,389.6,251"></ComboBox>
        <Button Name="button" Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="211" Margin="193,214,0,0" Height="45" Command="{Binding DeleteSongButton}"/>
    </Grid>
</Window>
