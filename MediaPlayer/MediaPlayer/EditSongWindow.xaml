<Window x:Class="MediaPlayer.EditSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaPlayer"
        mc:Ignorable="d"
        Title="EditSongWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Label Content="Title" Margin="0,10,747.6,380"></Label>
        <Label Content="Artist" Margin="0,48,747.6,332" RenderTransformOrigin="0.504,1.35"></Label>
        <TextBox Text="{Binding EditArtistName}" Margin="91,48,582.6,338"></TextBox>
        <TextBox Text="{Binding EditSongTitle}" Margin="91,10,582.6,377"></TextBox>
        <Button Content="Save" Command="{Binding SaveEditSongButton}" Margin="91,92,582.6,287"></Button>
        
    </Grid>
</Window>
